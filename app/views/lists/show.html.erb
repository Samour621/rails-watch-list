<h1 class="white-text"><%= @list.name %></h1>

<div class="grid">
<% @list.bookmarks.each do |bookmark| %>
<div class="card-product">
 <%= image_tag bookmark.movie.poster_url %>
  <div class="card-product-infos">
    <h2><%= bookmark.movie.title %></h2>
    <p><%= bookmark.movie.overview %></p>
  </div>
  <%=link_to 'Remove', bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-dark mb-4 text-decoration-none" %>
</div>
<% end %>
</div>
<%=link_to 'Back', lists_path, class: "btn btn-dark mb-4 text-decoration-none" %>
<%=link_to 'Add Movie to List', new_list_bookmark_path(@list), class: "btn btn-dark mb-4 text-decoration-none" %>
